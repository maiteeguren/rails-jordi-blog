<main>
    
    <section id="projects">
        <h2><span>Projects</span></h2>
        <div class="site__wrapper">
            <% @posts.each_with_index do |post, index| %>
                <div class="grid">
                    <div class="card">
                        <div class="card__image">
                            <img src="https://unsplash.it/400/300?image=100" alt="">
                            <% if (index % 4 === 0) %>
                                <div class="card__overlay card__overlay--indigo">
                                    <div class="card__overlay-content">
                                        <span class="card__title"><%= post.title %></span>
                                    </div>
                                </div>
                            <% elsif (index % 2 === 0) %>
                                <div class="card__overlay card__overlay--black">
                                    <div class="card__overlay-content">
                                        <span class="card__title"><%= post.title %></span>
                                    </div>
                                </div>
                            <% else %>
                                <div class="card__overlay card__overlay--blue">
                                    <div class="card__overlay-content">
                                        <span class="card__title"><%= post.title %></span>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>	
        </div>
    </section>
</main>